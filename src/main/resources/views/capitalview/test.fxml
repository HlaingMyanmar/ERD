<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.CapitalController" spacing="20" alignment="CENTER" prefWidth="600" prefHeight="500">
    <children>
        <!-- TabPane for Injection and Withdrawal -->
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <!-- Capital Injection Tab -->
            <Tab text="Capital Injection">
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Add Capital Injection" style="-fx-font-size: 16px;"/>
                    <GridPane hgap="10" vgap="10" alignment="CENTER">
                        <Label text="Injection Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="injectionDateField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="injectionAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="injectionDescField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Button fx:id="addInjectionButton" text="Add Injection" onAction="#handleAddInjection" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
                    </GridPane>
                </VBox>
            </Tab>

            <!-- Capital Withdrawal Tab -->
            <Tab text="Capital Withdrawal">
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Add Capital Withdrawal" style="-fx-font-size: 16px;"/>
                    <GridPane hgap="10" vgap="10" alignment="CENTER">
                        <Label text="Withdrawal Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="withdrawalDateField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="withdrawalAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="withdrawalDescField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Button fx:id="addWithdrawalButton" text="Add Withdrawal" onAction="#handleAddWithdrawal" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
                    </GridPane>
                </VBox>
            </Tab>
        </TabPane>

        <!-- TableView to Display Data -->
        <Label text="Capital Records" style="-fx-font-size: 16px;"/>
        <TableView fx:id="capitalTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="descColumn" text="Description" prefWidth="200"/>
            </columns>
        </TableView>
    </children>
</VBox>